{
	"version": "0.1.0",
	
	"command": "cmd",
	
	"isShellCommand": true,

	"tasks": [
        {
            "taskName": "runtest",
            "args": ["/c", "runtest", "${fileBasename}"],
            "isBuildCommand": true,
            "isTestCommand": true,
            "problemMatcher": ["$msCompile"]
        },
        {
            "taskName": "description",
            "args": ["/c", "description", "${fileBasename}"],
            "showOutput": "silent"
        }
    ]
}